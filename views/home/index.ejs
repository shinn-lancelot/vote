<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, user-scalable=no,initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, target-densitydpi=device-dpi">
    <link rel='stylesheet' href='/home/stylesheets/style.css' />
  </head>
  <body>
    <div class="wrap">
      <header>
        <img src="/home/images/banner.png" class="banner" alt="banner">
      </header>
      <section>
        <div class="content">
          <h4>投票选项</h4>
          <ul class="item-list">
            <% items.forEach(function(item){ %>
            <li class="item">
              <div class="item-img-frame">
                <img src="<%=item.img %>" class="item-img" alt="">
              </div>
              <h4 class="item-name"><%=item.title %></h4>
              <div class="item-info-frame">
                <p class="vote-num"><%=item.vote_num %>票</p>
                <button class="vote-btn" data-id="<%=item._id %>">投票</button>
              </div>
            </li>
            <% }) %>
          </ul>
        </div>
      </section>
      <footer>
        <div class="copyright">云杉科技 &copy 版权所有</div>
      </footer>
    </div>
    <script src="//cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
    <script>
      var vote_id;
      $('.vote-btn').on('click', function(){
          vote_id = $(this).attr('data-id');
          console.log(vote_id);
          $.ajax({
              url: '/vote',
              type: 'post',
              data: {id: vote_id,datas: 1},
              dataType: 'json',
              success: function(data){
                  console.log(data);
                  alert(data.msg);
                  if(data.code == 1001){
                      window.location.reload();
                  }
              },
              error: function(){}
          });
      });
    </script>
  </body>
</html>
