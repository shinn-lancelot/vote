
.wrap
  width 100%
  height auto

header,section,footer
  width 100%
  height auto

.banner
  width 100%
  height auto

.common-content
  margin 0 auto
  padding 0

.common-item
  display inline-block
  background #fff
  font-size 1rem
  word-break break-all
  word-wrap break-word
  margin 0 2vw 2vw 0
  box-sizing border-box
  box-shadow: 0px 0px 15px #c9c9c9

.common-item-img-frame
  width 100%
  overflow-y hidden !important

.common-item-name
  overflow hidden
  margin 0
  width 100%
  box-sizing border-box
  color #666666

.common-item-info-frame
  width 100%
  font-size 0

.common-vote-num
  width 60%
  margin 0 !important
  box-sizing border-box
  color #8a8a8a
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  display inline-block
  vertical-align: middle

.common-vote-btn
  width 34%
  height 2vw
  line-height 2vw
  text-align center
  margin 0 3%
  box-sizing border-box
  font-size 0.8rem
  border 0
  color #fff
  background #6cc3c4
  display inline-block
  vertical-align middle
  outline none
  cursor pointer

@media (min-width 0) and (max-width 767px)
  .content
    width 90vw
    @extend .common-content

  .item
    width 44vw
    height 44vw
    @extend .common-item

  .item:nth-child(2n)
    margin-right 0

  .item-img-frame
    height 26.7vw
    @extend .common-item-img-frame

  .item-name
    padding 0 0 0 5px
    height 8.5vw
    font-size 1rem
    @extend .common-item-name

  .item-info-frame
    height 8.8vw
    @extend .common-item-info-frame

  .vote-num
    height 8.8vw
    line-height 8.8vw
    padding 0 0 0 5px
    font-size 0.8rem
    @extend .common-vote-num

  .vote-btn
    height 7vw
    line-height 7vw
    font-size 0.8rem
    @extend .common-vote-btn

@media (min-width 768px)
  .content
    width 72vw
    @extend .common-content

  .item
    width 16.5vw
    height 16.5vw
    @extend .common-item

  .item:nth-child(4n)
    margin-right 0

  .item-img-frame
    height 10vw
    @extend .common-item-img-frame

  .item-name
    padding 0 0 0 5px
    height 3vw
    font-size 1rem
    @extend .common-item-name

  .item-info-frame
    height 3.5vw
    @extend .common-item-info-frame

  .vote-num
    height 3.5vw
    line-height 3.5vw
    padding 0 0 0 5px
    font-size 0.8rem
    @extend .common-vote-num

  .vote-btn
    height 2vw
    line-height 2vw
    font-size 0.8rem
    @extend .common-vote-btn

.item-list
  width 100%
  height auto
  margin 0
  padding 0
  box-sizing border-box
  font-size 0

.item:hover
  box-shadow: 0px 0px 20px #b9b9b9

.item-img
  width 100%
  height auto

.vote-btn:hover
  opacity 0.8

.vote-btn:active
  opacity 1

.copyright
  text-align center
  font-size 0.8rem
  margin 20px auto;